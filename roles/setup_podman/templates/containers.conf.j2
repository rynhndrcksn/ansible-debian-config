# Podman configuration - managed by ansible template
[containers]
rootless = true
runtime = "crun"
netns = "cni"
seccomp_profile = "/etc/containers/seccomp.json"

[storage]
driver = "overlay"
runroot = "/run/user/{{ podman_user_info.ansible_facts.getent_passwd['podman'][1] }}/containers"
graphroot = "/home/podman/.local/share/containers/storage"
mount_program = "/usr/bin/fuse-overlayfs"

[engine]
network_cmd = "pasta"
cgroup_manager = "cgroupfs"
mount_flags = "nodev, noexec, nosuid"
default_capabilities = [
  "CAP_CHOWN",
  "CAP_DAC_OVERRIDE",
  "CAP_FSETID",
  "CAP_FOWNER",
  "CAP_SETGID",
  "CAP_SETUID",
  "CAP_SETPCAP",
  "CAP_NET_BIND_SERVICE",
  "CAP_KILL",
  "CAP_AUDIT_WRITE"
]

[registries]
unqualified-search-registries = ["docker.io"]

